<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/machikiri_back">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="55dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SENTIMENTS AND PERCEPTION"
                    android:textColor="#fff"
                    android:background="@drawable/textview_grandient"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:src="@drawable/happy"/>

            </LinearLayout>



                <TextView
                    android:text="1. What do you like about the Rustneburg Process Division"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText1"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />



                <TextView
                    android:text="2. What don't you like about the Rustneburg Process Division"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText2"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />



                <TextView
                    android:text="3. The mine keeps us informed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText3"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />


                <TextView
                    android:text="4. The mine listens to our needs, problems and expectations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText4"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />


                <TextView
                    android:text="5. The mine address our needs, problems and expectations effectively"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText5"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />

                <TextView
                    android:text="6. the mine address our concerns effectively"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText6"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />

                <TextView
                    android:text="7.The mine informs us of what they are doing or going to do to address our concerns and needs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText7"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />

                <TextView
                    android:text="8. The mine helps the communities work together in a more harmonious and neighbourly way."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText8"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1"
                    style="@style/textField"/>


                <TextView
                    android:text="9. The mine assists us to improve our standards of living."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText9"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />

                <TextView
                    android:text="10. The mine informs us on any new developments or changes that the mine is going to make that may affect us."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText10"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1"
                    />


                <TextView
                    android:text="11. the mine consults us in any future changes they plan to make so that our interests are taken into account."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText11"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />


                <TextView
                    android:text="12. Then mine informs us of the regulations that they must meet and how they plan to go about meeting those regulations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText12"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />


                <TextView
                    android:text="13. The mines asks us to provide feedback on how well they minimise the effects of the mines operations on us."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText13"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />


                <TextView
                    android:text="14. The mine consults us on SPL programmes for the area to ensure that our needs are addressed fairly and transparently"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText14"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />

                <TextView
                    android:text="15. The mine ensures that all communities are treated fairly and ensure that some communities are not left behind."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText15"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />

                <TextView
                    android:text="16. What don't you like about the Rustenburg Process Divine."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:layout_weight="1"
                    style="@style/textField"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText16"
                    android:background="@drawable/edittext_bg"
                    android:layout_weight="1" />


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>