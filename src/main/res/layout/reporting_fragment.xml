<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/reports_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        android:layout_weight="0"
        android:layout_gravity="center_horizontal">


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/btn_question_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/thumbnails"
            android:layout_weight="1">

            <ImageView
                android:layout_width="66dp"
                android:layout_height="44dp"
                android:src="@drawable/checklist"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUESTIONNAIRES"
                android:id="@+id/txtDemo"
                android:textAlignment="center"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/btn_villages_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            style="@style/thumbnails">

            <ImageView
                android:layout_width="66dp"
                android:layout_height="44dp"
                android:src="@drawable/house"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VILLAGES"
                android:textAlignment="center"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_fieldworkers_report"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            style="@style/thumbnails">

            <ImageView
                android:layout_width="66dp"
                android:layout_height="44dp"
                android:src="@drawable/chatting"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIELD WORKERS"
                android:textAlignment="center"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/btn_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            style="@style/thumbnails">

            <ImageView
                android:layout_width="66dp"
                android:layout_height="44dp"
                android:src="@drawable/medical_history"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATISTICS"
                android:textAlignment="center"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>


    </org.apmem.tools.layouts.FlowLayout>

</LinearLayout>